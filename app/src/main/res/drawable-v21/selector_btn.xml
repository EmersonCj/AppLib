<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="@color/line_color">      <!--点击时波纹的颜色-->
<item>                      <!--未点击时控件的颜色-->
    <selector>
        <item
            android:drawable="@drawable/btn_oval_press"
            android:state_pressed="true" />
        <item
            android:drawable="@drawable/btn_oval_press"
            android:state_focused="true"
            android:state_pressed="false" />
        <item
            android:drawable="@drawable/btn_oval_disable"
            android:state_enabled="false" />
        <item android:drawable="@drawable/btn_oval_normal" />
    </selector>
</item>
</ripple>