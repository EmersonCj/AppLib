<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/animation_linear">


    <ImageView
        android:id="@+id/ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@drawable/icon_loadmore"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帧动画过于简单，这里就不说了"/>

    <Button
        android:id="@+id/view_animation"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1，视图动画 View Animation"/>

    <TextView
        android:id="@+id/Property_animation"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2，属性动画"
        android:layout_marginLeft="150dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_weight="1.0"
            android:id="@+id/ObjectAnimator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator"
            android:textSize="10sp"
            />

        <Button
            android:layout_weight="1.0"
            android:id="@+id/ValueAnimator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ValueAnimator"
            android:textSize="10sp"/>

        <Button
            android:layout_weight="1.0"
            android:id="@+id/AnimatorSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet"
            android:textSize="10sp"/>




    </LinearLayout>

    <Button
        android:id="@+id/layout_animations"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="3，布局动画"
        android:layout_marginLeft="130dp"/>

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/animation_show"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/qq"/>

</LinearLayout>