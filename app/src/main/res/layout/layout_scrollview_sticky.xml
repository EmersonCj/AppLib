<?xml version="1.0" encoding="utf-8"?>
<lib.emerson.com.emersonapplib.view.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffff0000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffffff00" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffaaff33" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ff0000ff" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ff00ffff"
            android:tag="sticky" >

            <Button
                android:id="@+id/button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Button" />
        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffff3333" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffffeeee" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ff0033ff" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffcc9922" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ff333333" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:tag="sticky"
            android:background="#ffeeeeee" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ff999999" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#fff322ff" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ff22ff22" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffff0000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffff00ff" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ff00ffff" />
    </LinearLayout>

</lib.emerson.com.emersonapplib.view.StickyScrollView>