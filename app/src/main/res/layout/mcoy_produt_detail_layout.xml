<?xml version="1.0" encoding="UTF-8"?>
<lib.emerson.com.emersonapplib.view.snapscrollview.McoyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f1f1f5"
    android:fadeScrollbars="true"
    android:focusable="false"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <LinearLayout
            android:id="@+id/imagesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <!--商品轮播-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_marginLeft="@dimen/dp_value_10"
                    android:layout_marginTop="@dimen/dp_value_10"
                    android:src="@drawable/loadlose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/relativelayout_good_price_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/view_line"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_good_details_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="越南进口红肉火龙果6个/份"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="#151515"/>

                <TextView
                    android:id="@+id/tv_good_details_miaoshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新鲜上架 果肉结实 甜中带微酸"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_grey"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout_good_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_below="@+id/relativelayout_good_price_name">
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_good_details_shop_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥30.90"
                        android:textColor="#c83232"
                        android:textSize="20sp"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/tv_good_details_market_Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原价：￥40.90"
                        android:textColor="@color/text_grey"
                        android:textSize="15sp"/>

                </LinearLayout>
            </LinearLayout>
            <!-- -&#45;&#45;&#45;&#45;&#45;&#45;-->
            <LinearLayout
                android:layout_marginBottom="@dimen/dp_value_10"
                android:padding="@dimen/dp_value_10"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="规格"
                        android:textColor="@color/text_grey"
                        android:layout_marginBottom="@dimen/dp_value_5"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_guige"
                        android:text=""
                        android:textColor="@color/text_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="@color/line_color"
                    android:layout_width="@dimen/dp_value_1"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="产地"
                        android:textColor="@color/text_grey"
                        android:layout_marginBottom="@dimen/dp_value_5"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_chandi"
                        android:text=""
                        android:textColor="#656565"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="@color/line_color"
                    android:layout_width="@dimen/dp_value_1"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="销量"
                        android:textColor="@color/text_grey"
                        android:layout_marginBottom="@dimen/dp_value_5"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_salenum"
                        android:text=""
                        android:textColor="#656565"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_value_50"
            android:background="@color/white"
            android:layout_below="@id/imagesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_toLeftOf="@+id/tv_shangla"
                android:layout_centerVertical="true"
                android:src="@drawable/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_shangla"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:text="上拉查看商品图文详情"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>

</lib.emerson.com.emersonapplib.view.snapscrollview.McoyScrollView>